<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/lblAusgabe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ausgabe"
        android:textSize="20dp"
        android:layout_margin="5dp"/>
    <RatingBar
        android:id="@+id/rbMyRatingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"/>
    <Button
        android:id="@+id/btnSpuhlen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SpÃ¼len"
        android:textAllCaps="false"/>
    <EditText
        android:id="@+id/txtAusgabeDatetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:layout_margin="5dp"
        android:inputType="datetime"
        android:hint="Datetime input"/>
    <EditText
        android:id="@+id/txtAusgabePhone"
        android:layout_width="match_parent"
        android:imeOptions="actionDone"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="phone"
        android:hint="Phone input"/>
    <EditText
        android:id="@+id/txtAusgabeText"
        android:imeOptions="actionDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="text"
        android:hint="Text input"/>

</LinearLayout>
